{
    "manifest_version": 3,
    "name": "DarkPorta",
    "description": "Dark mode for BME IIT JPorta",
    "version": "1.2",
    "action": {
        "default_icon": "logo.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://jporta.iit.bme.hu/*"
            ],
            "css": [
                "dark.css"
            ]
        },
        {
            "matches": [
                "https://jporta.iit.bme.hu/*.cpp",
                "https://jporta.iit.bme.hu/*.h"
            ],
            "css": [
                "code.css"
            ]
        }
    ]
}